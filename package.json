{
  "name": "ideogram-mcp-server",
  "version": "3.0.1",
  "description": "MCP implementation for Ideogram V3 API",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "type": "module",
  "bin": {
    "ideogram-mcp-server": "dist/server.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:smithery": "smithery build",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "dev:smithery": "smithery dev",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "mcp",
    "ideogram",
    "ai",
    "claude-code",
    "gptme",
    "opencode",
    "image-generation",
    "model-context-protocol",
    "image-editing",
    "image-description"
  ],
  "author": "Jarad DeLorenzo <delorenj>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delorenj/ideogram-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/delorenj/ideogram-mcp-server/issues"
  },
  "homepage": "https://github.com/delorenj/ideogram-mcp-server#readme",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.21",
  "dependencies": {
    "axios": "^1.6.7",
    "fastmcp": "^2.2.4",
    "form-data": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3"
  }
}
